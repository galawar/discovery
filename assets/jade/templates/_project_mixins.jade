mixin place_menu(array)
	ul.place_menu
		each item in array
			li.place_m_item
				+icon(item.name, 'menu_mod')
				if item.events
					ul.events_list
						each e in item.events
							li.events_item
								a.events_link(href= e.url)= e.event
