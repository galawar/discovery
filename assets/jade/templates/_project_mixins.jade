mixin header
	header.header
		.header_wrap
			.header_top
				form.form_subscribe#form_subscribe
					+form_element({
						type: 'email',
						class_array: default_field,
						add_class: 'mail_mod',
						title: '',
						id: 'subscribe_email',
						placeholder: 'Ваш e-mail'
					})
						+icon('mail')
						button.subscribe_btn(type='submit' form='form_subscribe') Подписаться
				.socials
					p.socials_desc Быстрый вход / регистрация (кликните на вашу соцсеть)
					+social(socials, '')

			.header_middle
				.logo_wrap
					h1.logo
						a.logo_link(href='#')
							img(src='i/logo.png' alt='Discovery logo')
				+main_menu(MenuArray)

			.header_bottom
				.breadcrumbs
					p.breadcrumbs_text Вы сейчас здесь:
					+breadcrumbs(['Главная', 'Европа'])

				.search_wrap
					+icon('star', 'search_mod')

					form.form_search#form_search
						+form_element({
							type: 'text',
							class_array: v2_field,
							title: '',
							id: 'place',
							placeholder: 'Страна, город, место, а может идея?'
						})

						+form_element({
							type: 'text',
							class_array: v3_field,
							title: 'Я хочу',
							id: 'action',
							placeholder: 'валяться на пляже и наблюдать за стройными австралийками'
						})
							.search_i_wrap
								img.search_i(src='i/search_img.jpg')
						button.search_btn(type='submit' form='form_search') Да!
						a.search_btn.more_mod(href='#') Еще


mixin footer
	footer.footer
		.footer_top
			.logo_wrap
				.logo
					a.logo_link(href='#')
						img(src='i/logo.png' alt='Discovery logo')
			+main_menu(MenuArray)

		.footer_bottom
			.copyrights &copy; 2014 Издательский дом Discovery-Russia. Все права защищены.
			.socials.footer_mod
				p.socials_desc Мы в социальных сетях:
				+social(socials, '')

