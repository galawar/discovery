		.content
			section.section.preview_mod
				figure.preview_image
					img.img(src='i/places/island.jpg')
					figcaption.preview_caption
						h2.title.preview_mod Острова мира
						.preview_desc
							p Выступления юных артистов стали ярким сплетением национальных традиций народов
			//------------------------------------------------ ##preview

			section.section.events_mod
				h2.title События и праздники
				.events_wrap
					+loop_while(8)
						.event
							.event_image
								img.event_i(src='i/places/event.jpg')
							h3.title.event_mod Октоберфест
							ul.event_list
								li.event_item 3 окт-2 ноя, ежегодно
									+icon('calendar', 'event_mod')
								li.event_item Германия / Берлин
									+icon('location', 'event_mod')
