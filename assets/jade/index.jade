						+link_list(['Архитектура(23)', 'Религиозное место(88)', 'Памятник(11)', 'Достопримечательности(22)', 'Замок/крепость(10)'], 'info')
			//------------------------------------------------ ##content

			section.section.dark_mod
				h2.title.recent_mod: <strong>Последнее</strong> добавленное (всего 32)
				.recent_slider_wrap
					ul.recent_list
						+loop_while(4)
							li.recent_item
								+loop_while(4)
									article.post.recent_mod
										.post_date
											+icon('calendar-o', 'recent_mod')
											span.post_d_day 28
											span.post_d_month Ноября
											span.post_d_year 2014
										h2.post_title Красота Алтая в сентябре
										.post_tags Место: &nbsp;
											ul.tags_list
												li.tags_item
													a.tags_link(href='#') Россия
												li.tags_item
													a.tags_link(href='#') Алтай
												li.tags_item
													a.tags_link(href='#') Белокуриха
										.post_author
											.author_i_wrap
												img(src='i/avatar.jpg')
											.author_name
												span.firstname Иннокентий
												span.lastname Смактуновский
